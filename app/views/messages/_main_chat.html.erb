<div class="chat-header">
  <div class="left-header">
    <div class="main-chat-name">7room</div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="message-header">
      <div class="message-name">Tom</div>
      <div class="message-time">2020/10/13(Wed) 12:13:07</div>
    </div>
    <div class="message-content">おはよう</div>
  </div>
  <div class="message">
    <div class="message-header">
      <div class="message-name">Sam</div>
      <div class="message-time">2020/10/13(Wed) 12:13:07</div>
    </div>
    <div class="message-content">こんばんは</div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, class: 'content', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>